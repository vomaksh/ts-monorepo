{
    "compilerOptions": {
        "strict": true,
        "module": "esnext",
        "target": "esnext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "paths": {
            "@ts-monorepo/core": ["packages/core"]
        }
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
